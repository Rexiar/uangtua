<Page x:Class="MainProgram.View.Pages.CategoriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MainProgram.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CategoriesPage">

    <Grid>
        <Border BorderThickness="0" CornerRadius="10" BorderBrush="Black" Background="White">
            <DataGrid x:Name="DatagridCategory" HorizontalAlignment="Left" Height="155" Margin="55,254,0,0" VerticalAlignment="Top" Width="669" SelectionChanged="DataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Income" Binding="{Binding Income}" Width="*">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Expense" Binding="{Binding Expense}" Width="*">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <Grid/>
        <Grid/>
        <Label Content="Categories" HorizontalAlignment="Left" Margin="24,25,0,0" VerticalAlignment="Top" FontFamily="Montserrat" FontSize="25" FontWeight="Bold" Height="37" Width="180"/>
        <Border BorderThickness="0" CornerRadius="8" BorderBrush="Black" Margin="53,83,53,215" Background="#FFFFDB57">
        </Border>
        <Grid>
            <Grid>
                <TextBox x:Name="nameInput" HorizontalAlignment="Left" Margin="92,141,0,0" TextWrapping="Wrap" Text="Enter the category name" VerticalAlignment="Top" Width="252" Height="28" Background="#FFFFDB57" Padding="5" BorderBrush="#FF00509D"/>
                <Label Content="Name" HorizontalAlignment="Left" Margin="92,110,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="12" Foreground="#FF565050"/>
            </Grid>
            <Grid>
                <Label Content="Type" HorizontalAlignment="Left" Margin="400,110,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="12" Foreground="#FF565050" RenderTransformOrigin="0.569,0.77"/>
                <ComboBox x:Name="typeInput" Margin="400,141,148,270">
                    <ComboBoxItem Content="Income"/>
                    <ComboBoxItem Content="Expense"/>
                </ComboBox>
            </Grid>
            <Button x:Name="addCategoryBtn" Content="Add Category" HorizontalAlignment="Left"  Margin="576,184,0,0" VerticalAlignment="Top" Width="112" Height="30" Padding="5" Foreground="White" Background="#FF00509D" Click="addCategoryBtn_Click" />
        </Grid>
    </Grid>
</Page>
